<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card bg-dark text-white">
      <div class="card-header pt-5">
        <h4 class="text-center">
          Visualizar datos de los Usuarios
        </h4>
        <br>
        <form action="/usuarios/visualizar-usuarios/{{usuarios._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />

<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade show active" id="home" role="tabpanel">
      <div class="card-body">

          <div class="mb-3">
            <label for="name">Nombre:</label>
            <input type="text" class="form-control bg-ligth " name="name" placeholder="Nombre" value="{{usuarios.name}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="apellido">Apellido:</label>
            <input type="text" class="form-control bg-ligth" name="apellido" placeholder="Apellido" value="{{usuarios.apellido}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="celular">Numero Celular:</label>
            <input type="text"  class="form-control bg-ligth" name="celular" placeholder="celular" value="{{usuarios.celular}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="email">Email:</label> 
            <input  type="email"  class="form-control bg-ligth"  name="email"  placeholder="Email"  value="{{usuarios.email}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="Usuario">Usuario:</label> 
            <input  type="text"  class="form-control bg-ligth"  name="usuario"   value="{{usuarios.usuario}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="Tipo">Tipo Usuario:</label> 
            <input  type="text"  class="form-control bg-ligth"  name="tipo_usuario"   value="{{usuarios.tipo_usuario}}" readonly/>
          </div>
     

      </div>
 
 
  </div>

  <div class="tab-pane fade" id="profile" role="tabpanel">
      <div class="card-body">

          <div class="mb-3">
            <label for="direccion">Direccion:</label>
            <input type="text" class="form-control bg-ligth"  name="direccion"  placeholder="direccion" value="{{usuarios.direccion}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="calle">Calle con que cruza:</label>
            <input type="text" class="form-control bg-ligth" name="calle" placeholder="calle" value="{{usuarios.calle}}"readonly/>
          </div>
          <div class="mb-3">
            <label for="ciudad_barrio">Ciudad Barrio:</label>
            <input type="text" class="form-control bg-ligth" name="ciudad_barrio" placeholder="ciudad_barrio"  value="{{usuarios.ciudad_barrio}}"readonly />
          </div>
          <div class="mb-3">
            <label for="ubicacion">Ubicacion Google:</label>
            <input type="text" class="form-control bg-ligth"  name="ubica"  placeholder="ciudad_barrio" value="{{usuarios.ubica}}" readonly/>
          </div>
          <div class="mb-3">
            <label for="horario_ent">Horario de entrega:</label>
            <input type="text" class="form-control bg-ligth"  name="horario_ent"  placeholder="Horario" value="{{usuarios.horario_ent}}" readonly/>
          </div> 
      </div>
  </div>
</div>

              <a href="/usuarios"><i class="fas fa-undo" style="color: white;"></i></a>
        </form>
        </form>
      </div>


    </div>
  </div>
</div>